<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/lbl_format">
        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_baseline_edit_24"
            android:key="search.reformat.format"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_search_reformat_format" />

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_baseline_edit_24"
            android:key="search.reformat.color"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_search_reformat_color" />
    </PreferenceCategory>

    <!-- FIXME: orderingFromXml does not seem to work here ? -->
    <PreferenceCategory
        android:title="@string/lbl_websites"
        app:orderingFromXml="false">

        <Preference
            android:fragment="com.hardbacknutter.nevertoomanybooks.settings.sites.AmazonPreferencesFragment"
            android:key="psk_search_site_amazon"
            android:title="@string/site_amazon">
        </Preference>

        <Preference
            android:fragment="com.hardbacknutter.nevertoomanybooks.settings.sites.GoogleBooksPreferencesFragment"
            android:key="psk_search_site_googlebooks"
            android:title="@string/site_google_books">
        </Preference>

        <Preference
            android:fragment="com.hardbacknutter.nevertoomanybooks.settings.sites.IsfdbPreferencesFragment"
            android:key="psk_search_site_isfdb"
            android:title="@string/site_isfdb">
        </Preference>

        <Preference
            android:fragment="com.hardbacknutter.nevertoomanybooks.settings.sites.KbNlPreferencesFragment"
            android:key="psk_search_site_kbnl"
            android:title="@string/site_kb_nl">
        </Preference>

        <Preference
            android:fragment="com.hardbacknutter.nevertoomanybooks.settings.sites.LibraryThingPreferencesFragment"
            android:key="psk_search_site_librarything"
            android:title="@string/site_library_thing">
        </Preference>

        <Preference
            android:fragment="com.hardbacknutter.nevertoomanybooks.settings.sites.OpenLibraryPreferencesFragment"
            android:key="psk_search_site_openlibrary"
            android:title="@string/site_open_library">
        </Preference>

        <Preference
            android:fragment="com.hardbacknutter.nevertoomanybooks.settings.sites.LastDodoPreferencesFragment"
            android:key="psk_search_site_lastdodo"
            android:title="@string/site_lastdodo_nl">
        </Preference>

        <Preference
            android:fragment="com.hardbacknutter.nevertoomanybooks.settings.sites.StripInfoBePreferencesFragment"
            android:key="psk_search_site_stripinfo"
            android:title="@string/site_stripinfo_be">
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>
