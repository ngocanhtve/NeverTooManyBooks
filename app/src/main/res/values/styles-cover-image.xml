<!-- android.widget.ImageView -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ImageView -->
    <style name="Base.CoverImage" parent="">
        <!-- we'll add a context menu -->
        <item name="android:focusable">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitStart</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="CoverImage.List" parent="Base.CoverImage">
        <item name="android:padding">@dimen/cover_list_padding</item>
        <item name="android:contentDescription">@string/lbl_cover_front</item>
    </style>

    <style name="CoverImage.Details.0" parent="Base.CoverImage">
        <item name="android:padding">@dimen/cover_details_0_padding</item>
        <item name="android:layout_width">@dimen/cover_details_0_width</item>
        <item name="android:layout_height">@dimen/cover_details_0_height</item>
        <item name="android:contentDescription">@string/lbl_cover_front</item>
    </style>

    <style name="CoverImage.Details.1" parent="Base.CoverImage">
        <item name="android:padding">@dimen/cover_details_1_padding</item>
        <item name="android:layout_width">@dimen/cover_details_1_width</item>
        <item name="android:layout_height">@dimen/cover_details_1_height</item>
        <item name="android:contentDescription">@string/lbl_cover_back</item>
    </style>

    <style name="CoverImage.Edit.0" parent="Base.CoverImage">
        <item name="android:layout_width">@dimen/cover_edit_0_width</item>
        <item name="android:layout_height">@dimen/cover_edit_0_height</item>
        <item name="android:contentDescription">@string/lbl_cover_front</item>
    </style>

    <style name="CoverImage.Edit.1" parent="Base.CoverImage">
        <item name="android:layout_width">@dimen/cover_edit_1_width</item>
        <item name="android:layout_height">@dimen/cover_edit_1_height</item>
        <item name="android:contentDescription">@string/lbl_cover_back</item>
        <item name="android:layout_marginStart">@dimen/field_margin_inline</item>
    </style>

    <style name="CoverImage.Zoom" parent="Base.CoverImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="layout_constraintVertical_bias">0.5</item>
    </style>

    <style name="CoverImage.BrowserPreview" parent="Base.CoverImage">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/cover_browser_preview_width</item>
        <item name="android:layout_height">@dimen/cover_browser_preview_height</item>
    </style>

    <style name="CoverImage.BrowserGallery" parent="Base.CoverImage">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/cover_browser_gallery_width</item>
        <item name="android:layout_height">@dimen/cover_browser_gallery_height</item>
        <item name="android:padding">@dimen/cover_list_padding</item>
    </style>
</resources>
