<resources>

    <!-- Chip components created from code use these style attr values. -->
    <attr name="appChipFilterStyle" format="reference" />
    <attr name="appChipInputStyle" format="reference" />

    <!-- Background for Activity and Dialog toolbars. -->
    <attr name="appToolbarBackground" format="reference|color" />
    <!-- Color used for the drop-down icon in ExposedDropdownMenu.
         Overrides the default to make it better visible. -->
    <attr name="appDropdownIconColor" format="reference|color" />

    <!-- Color to give (the icon) of certain preferences a visual indicator. -->
    <attr name="appPreferenceAlertColor" format="reference|color" />

    <!-- Color gradient used in the Navigation side bar. -->
    <attr name="appNavBarColorStart" format="reference|color" />
    <attr name="appNavBarColorCenter" format="reference|color" />
    <attr name="appNavBarColorEnd" format="reference|color" />

    <declare-styleable name="ExtGroup">
        <attr name="groupApply">
            <flag name="visibility" value="0x1" />
            <flag name="onclick" value="0x2" />
            <flag name="tags" value="0x4" />
        </attr>
    </declare-styleable>

</resources>
