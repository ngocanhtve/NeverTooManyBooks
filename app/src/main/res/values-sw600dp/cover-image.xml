<!-- Generic  7.0" (600 x 1024) - 160dpi - sw600 -->
<resources>
    <dimen name="app_logo">120dp</dimen>

    <dimen name="cover_list_padding">4dp</dimen>
    <dimen name="cover_details_0_padding">15dp</dimen>
    <dimen name="cover_details_1_padding">15dp</dimen>

    <!-- multiplier: 3 -->
    <dimen name="cover_details_0_height">300dp</dimen>
    <dimen name="cover_details_0_width">192dp</dimen>
    <!-- multiplier: 1.5 -->
    <dimen name="cover_details_1_height">150dp</dimen>
    <dimen name="cover_details_1_width">96dp</dimen>

    <!-- multiplier: 1.5 -->
    <dimen name="cover_edit_0_height">150dp</dimen>
    <dimen name="cover_edit_0_width">96dp</dimen>
    <dimen name="cover_edit_1_height">150dp</dimen>
    <dimen name="cover_edit_1_width">96dp</dimen>

    <!-- multiplier: 1.5 -->
    <dimen name="cover_browser_gallery_height">150dp</dimen>
    <dimen name="cover_browser_gallery_width">96dp</dimen>

    <!-- multiplier: 2.5 -->
    <dimen name="cover_browser_preview_height">250dp</dimen>
    <dimen name="cover_browser_preview_width">160dp</dimen>

    <dimen name="cover_browser_gallery_text_size">14sp</dimen>
    <integer name="cover_browser_gallery_span_count">2</integer>


    <array name="cover_max_width">
        <!-- hidden -->
        <item>0dp</item>
        <!-- small: 2 * 40dp
            List-mode Portrait : ok
            List-mode Landscape: ok
            Grid-mode Portrait : 7 images.
            Grid-mode Landscape: 12 images.
        -->
        <item>80dp</item>
        <!-- medium: 3 * 40dp - the default.
            List-mode Portrait : ok
            List-mode Landscape: ok
            Grid-mode Portrait : 5 images.
            Grid-mode Landscape: 8 images.
        -->
        <item>120dp</item>
        <!-- large: 5 * 40dp
            List-mode Portrait : ok
            List-mode Landscape: ok
            Grid-mode Portrait : 3 images.
            Grid-mode Landscape: 4 images.
        -->
        <item>200dp</item>
        <!-- X-Large
            8 * 40dp
            List-mode Portrait : ok
            List-mode Landscape: ok
            Grid-mode Portrait : 1 image; large white band on the right.
            Grid-mode Landscape: 3 image; fills the entire width.

            9 * 40dp
            List-mode Portrait : ok
            List-mode Landscape: ok
            Grid-mode Portrait : 1 image; large white band on the right.
            Grid-mode Landscape: 2 image; white bands

            10 * 40dp
            List-mode Portrait : ok
            List-mode Landscape: ok
            Grid-mode Portrait : 1 image; large white band on the right.
            Grid-mode Landscape: 2 image; small white bands

            12 * 40dp
            List-mode Portrait : ok
            List-mode Landscape: ok
            Grid-mode Portrait : 1 image; large white band on the right.
            Grid-mode Landscape: 2 image; nearly full width

            13 * 40dp
            List-mode Portrait : ok
            List-mode Landscape: ok
            Grid-mode Portrait : 1 image; small white band on the right.
            Grid-mode Landscape: 1 image; large white band

            14 * 40dp
            List-mode Portrait : ok
            List-mode Landscape: ok
            Grid-mode Portrait : 1 image; small white band on the right.
            Grid-mode Landscape: 1 image; large white band

            15 * 40dp
            List-mode Portrait : ok
            List-mode Landscape: ok
            Grid-mode Portrait : 1 image; fills the entire width.
            Grid-mode Landscape: 1 image; large white band
        -->
        <item>600dp</item>
    </array>
</resources>
