<!-- Generic 10.1" (800 x 1280) - 160dpi - sw800 -->
<resources>

    <dimen name="cover_list_padding">8dp</dimen>
    <dimen name="cover_details_0_padding">20dp</dimen>
    <dimen name="cover_details_1_padding">20dp</dimen>

    <!-- multiplier: 3 -->
    <dimen name="cover_details_0_height">300dp</dimen>
    <dimen name="cover_details_0_width">192dp</dimen>
    <!-- multiplier: 1.5 -->
    <dimen name="cover_details_1_height">150dp</dimen>
    <dimen name="cover_details_1_width">96dp</dimen>

    <!-- multiplier: 1.75 -->
    <dimen name="cover_edit_0_height">175dp</dimen>
    <dimen name="cover_edit_0_width">112dp</dimen>
    <dimen name="cover_edit_1_height">175dp</dimen>
    <dimen name="cover_edit_1_width">112dp</dimen>

    <!-- multiplier: 1.5 -->
    <dimen name="cover_browser_gallery_height">150dp</dimen>
    <dimen name="cover_browser_gallery_width">96dp</dimen>

    <!-- multiplier: 4 -->
    <dimen name="cover_browser_preview_height">400dp</dimen>
    <dimen name="cover_browser_preview_width">256dp</dimen>

    <dimen name="cover_browser_gallery_text_size">18sp</dimen>
    <integer name="cover_browser_gallery_span_count">3</integer>

    <array name="cover_max_width">
        <!-- hidden -->
        <item>0dp</item>
        <!-- small: 4 * 40dp -->
        <item>160dp</item>
        <!-- medium: 5 * 40dp - the default. -->
        <item>200dp</item>
        <!-- large: 6 * 40dp -->
        <item>240dp</item>
        <!-- X-Large: 7 * 40dp -->
        <item>280dp</item>
    </array>
</resources>
